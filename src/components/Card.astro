---
export interface Props{
 
    dark?: boolean
}
const { dark = false} = Astro.props;
---

<div class={`card ${dark && 'darkCard'}`}>
   <slot/>
</div>

<style>
    .card {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
    transition: all 0.5s ease-in;

    }
    .darkCard{
    background: var(--color-primary);
    padding: 20px;
    color: #fff;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
    transition: all 0.5s ease-in;
    }
</style>